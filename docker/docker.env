# PostgreSQL Settings
DB_USER=fioreuser
DB_PASSWORD=fioresecurepassword
DB_NAME=fiore
DB_PORT_HOST=5434 # Port exposed on your machine for Postgres
DB_PORT_CONTAINER=5432 # Port Postgres runs on inside its container

# MinIO Settings
MINIO_ACCESS_KEY=fioreminiouser
MINIO_SECRET_KEY=fioreminiosupersecret
MINIO_API_PORT=9000 # Port exposed on your machine for MinIO API
MINIO_CONSOLE_PORT=9001 # Port exposed on your machine for MinIO Console
MINIO_INTERNAL_API_PORT=9000 # Port MinIO listens on inside its container (for backend service)
MINIO_BUCKET=fiore
MINIO_USE_SSL=false # Typically false for local Docker setup

# Backend JWT and API Key
JWT_SECRET=a_very_strong_and_long_secret_key_for_fiore_project_jwt
API_KEY=a_super_secure_api_key_for_fiore_services

# Gunicorn Worker Configuration (Optional, defaults are in Dockerfile/docker-compose)
# WEB_CONCURRENCY=4
